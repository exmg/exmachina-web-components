{
  "name": "exmachina-web-components",
  "private": true,
  "devDependencies": {
    "@babel/core": "^7.14.6",
    "@exmg/exmg-cli": "^4.0.0",
    "@material/typography": "^12.0.0",
    "@rollup/plugin-node-resolve": "^13.0.5",
    "@rollup/plugin-strip": "^2.1.0",
    "@web/dev-server": "0.0.29",
    "babel-loader": "^8.2.2",
    "concurrently": "^6.2.0",
    "lerna": "^4.0.0",
    "lit": "^2.0.0",
    "rollup": "^2.57.0",
    "rollup-plugin-copy": "^3.4.0",
    "rollup-plugin-terser": "^7.0.2",
    "typescript": "^4.3.2"
  },
  "scripts": {
    "start": "npm run build:styles && node ./scripts/parseElements.js && tsc -b && concurrently --names \"npm run watch:styles\" \"npm run watch\" \"web-dev-server --config ./web-dev-server.config.js\"",
    "watch:styles": "exmg-cli -w",
    "watch": "tsc -b --watch",
    "build:styles": "exmg-cli -s \"packages/**/styles/*.scss\" && exmg-cli -s \"demo/**/styles/*.scss\"",
    "bootstrap": "./scripts/bootstrap.sh",
    "lint": "eslint './demo/**/*ts' --ignore-path ./.gitignore -c ./.eslintrc.js --fix && lerna run lint",
    "postinstall": "npm run bootstrap",
    "publish": "npm run lint && lerna run build && lerna publish",
    "build:demo": "node ./scripts/parseElements.js && rm -rf ./docs && npm run build:styles && tsc -b && rollup --config ./rollup.config.js",
    "run:demo": "web-dev-server ./docs/demo/index.html"
  }
}