{
  "name": "exmachina-web-components",
  "private": true,
  "devDependencies": {
    "@babel/core": "^7.14.6",
    "@babel/plugin-transform-runtime": "^7.9.6",
    "@babel/polyfill": "^7.8.7",
    "@babel/preset-env": "^7.9.6",
    "@babel/runtime": "^7.9.6",
    "@babel/traverse": "^7.15.4",
    "@exmg/exmg-cli": "^4.0.0",
    "@material/typography": "^12.0.0",
    "@rollup/plugin-node-resolve": "^13.0.5",
    "@rollup/plugin-strip": "^2.1.0",
    "@web/dev-server": "0.0.29",
    "babel-loader": "^8.2.2",
    "babylon": "^6.18.0",
    "concurrently": "^6.2.0",
    "del-cli": "^3.0.1",
    "@typescript-eslint/eslint-plugin": "^2.3.2",
    "@typescript-eslint/parser": "^2.3.2",
    "eslint": "^5.16.0",
    "eslint-config-google": "^0.13.0",
    "eslint-plugin-jasmine": "^4.1.2",
    "eslint-plugin-wc": "^1.2.0",
    "lerna": "^4.0.0",
    "lit": "^2.0.0",
    "lit-analyzer": "^1.2.1",
    "rollup": "^2.57.0",
    "rollup-plugin-copy": "^3.4.0",
    "rollup-plugin-terser": "^7.0.2",
    "ts-lit-plugin": "^1.2.1",
    "typescript": "^4.3.2"
  },
  "scripts": {
    "clean": "del-cli packages/*/node_modules packages/*/package-lock.json && npm run clean:styles & npm run clean:typescript",
    "clean:styles": "del-cli packages/**/*-css.*",
    "clean:typescript": "tsc --build --clean",
    "lint:imports": "node scripts/check-imports.js",
    "lint": "npm run lint:lit",
    "lint:fix": "npm run lint:typescript -- --fix && npm run lint:lit -- --fix",
    "lint:typescript": "eslint \"packages/**/*.ts\"",
    "lint:lit": "lit-analyzer \"packages/**/*.ts\" --strict",
    "start": "npm run build & node ./scripts/parseElements.js && concurrently --names \"npm run watch\" \"web-dev-server --config ./web-dev-server.config.js\"",
    "watch:styles": "exmg-cli -w",
    "build": "npm run build:styling && npm run build:typescript",
    "build:typescript": "tsc --build --verbose",
    "build:styling": "lerna run --stream build:styles",
    "bootstrap": "./scripts/bootstrap.sh",
    "postinstall": "npm run bootstrap",
    "publish": "npm run lint && lerna run build && lerna publish",
    "build:demo": "node ./scripts/parseElements.js && rm -rf ./docs && npm run build && rollup --config ./rollup.config.js",
    "watch": "node scripts/watcher.js",
    "run:demo": "web-dev-server ./docs/demo/index.html"
  }
}
