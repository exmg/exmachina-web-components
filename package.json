{
  "name": "exmg-monorepo",
  "private": true,
  "devDependencies": {
    "@exmg/exmg-cli": "^4.0.0",
    "@web/dev-server": "^0.1.17",
    "concurrently": "^6.2.0",
    "lerna": "^4.0.0",
    "lit": "^2.0.0-rc.2",
    "typescript": "^4.3.2"
  },
  "scripts": {
    "start": "npm run build:styles && concurrently --kill-others --names tsc,web-dev-server  \"tsc --project ./demos -w\" \"npm run watch\" \"web-dev-server\" \"lerna run tsc:watch\"",
    "watch": "exmg-cli -w",
    "build:styles": "exmg-cli -s \"packages/**/src/**/*.scss\""
  },
  "dependencies": {
    "storybook": "^6.2.9"
  }
}
